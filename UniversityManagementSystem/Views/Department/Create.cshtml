@model UnversityManagementSystem.Models.Department

@{
    
    ViewBag.Title = "Create";
  
}
<script src="~/Scripts/jquery-2.1.4.min.js"></script>
<h2>Create</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Department</h4>
        <hr />
       

        @Html.ValidationSummary(true)

        <div class="form-group">
            
           
            @Html.LabelFor(model => model.DeptCode, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                
                @Html.EditorFor(model => model.DeptCode)
                @Html.ValidationMessageFor(model => model.DeptCode)
            </div>
        </div>

        <div class="form-group">
            
          
            @Html.LabelFor(model => model.DeptName, new { @class = "control-label col-md-2" })
            <div class="col-md-10">

                @Html.EditorFor(model => model.DeptName)
                @Html.ValidationMessageFor(model => model.DeptName)
            </div>
        </div>
        @*show Successfull message*@
        @if (ViewData["Error"] != null)
        {
            <div class="red" style="color:red;">
                <p><strong>@ViewData["Error"].ToString()</strong> </p>
            </div>
        }
        @if (TempData["Success"] != null)
        {
            <div class="green" style="color:Green;">
                <p><strong>@TempData["Success"].ToString()</strong> </p>
            </div>
        }
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </div>
    </div>
}



<div>
